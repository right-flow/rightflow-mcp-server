{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./packages/app/src/*"]
    }
  },
  "include": ["packages/app/src"],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "packages/app/src/**/__tests__/**",
    "packages/app/src/components/workflow/**",
    "packages/app/src/services/workflowPersistence.ts",
    "packages/app/src/services/workflowTemplateService.ts",
    "packages/app/src/types/workflow-template.ts",
    "packages/app/src/pages/WorkflowDesignerPage.tsx",
    "packages/app/src/components/billing/**",
    "packages/app/src/components/dashboard/TierBadge.tsx",
    "packages/app/src/components/dashboard/UsageStatsCard.tsx",
    "packages/app/src/components/notifications/LanguageSuggestionToast.tsx",
    "packages/app/src/components/onboarding/SmartUpgradeManager.tsx",
    "packages/app/src/components/editor/DraggableField.tsx",
    "packages/app/src/components/forms/templates/formTemplates.ts"
  ]
}
