{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist-api",
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "declaration": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./packages/app/src/*"]
    }
  },
  "include": [
    "api/**/*",
    "packages/app/backend/src/**/*",
    "packages/app/src/lib/**/*",
    "packages/app/src/services/**/*",
    "packages/app/src/store/**/*",
    "packages/app/src/types/**/*",
    "packages/app/src/utils/**/*",
    "packages/app/src/vite-env.d.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**",
    "packages/app/src/components/forms/FormBuilder.tsx",
    "packages/app/src/services/workflowPersistence.ts",
    "packages/app/src/services/workflowTemplateService.ts",
    "packages/app/src/types/workflow-template.ts",
    "node_modules",
    "dist",
    "dist-api"
  ]
}
