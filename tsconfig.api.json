{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist-api",
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "declaration": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "include": [
    "api/**/*",
    "src/lib/**/*",
    "src/services/**/*"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "node_modules",
    "dist",
    "dist-api"
  ]
}
