{
  "compilerOptions": {
    "outDir": "./dist-api",
    "module": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "NodeNext",
    "declaration": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "strict": false,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "isolatedModules": true,
    "baseUrl": "."
  },
  "include": [
    "api/**/*",
    "packages/app/src/lib/**/*"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**",
    "node_modules",
    "dist",
    "dist-api"
  ]
}
