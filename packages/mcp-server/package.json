{
  "name": "@rightflow/mcp-hebrew-pdf",
  "version": "1.0.0",
  "description": "RightFlow MCP Server - Hebrew PDF generation for Claude Code",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "rightflow-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'Linting not configured yet'"
  },
  "keywords": [
    "mcp",
    "claude",
    "pdf",
    "hebrew",
    "rtl",
    "israel",
    "documents"
  ],
  "author": "RightFlow",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.0",
    "dotenv": "^16.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.6.1",
    "typescript": "^5.3.0",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/rightflow-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/rightflow-mcp-server/issues"
  },
  "homepage": "https://github.com/your-org/rightflow-mcp-server#readme"
}
