    "vowel-marks",
    "i18n",
    "internationalization"
  ],
  "author": {
    "name": "RightFlow Team",
    "email": "support@rightflow.com",
    "url": "https://rightflow.com"
  },
  "contributors": [
    {
      "name": "Claude Sonnet 4.5",
      "url": "https://anthropic.com"
    }
  ],
  "license": "MIT",
