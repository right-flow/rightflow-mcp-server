{
  "name": "@rightflow/mcp-hebrew-pdf",
  "version": "2.0.0",
  "description": "Model Context Protocol (MCP) server for Hebrew PDF generation in Claude Desktop - Professional RTL document creation with proper BiDi text handling",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "rightflow-mcp": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "API_REFERENCE.md",
    "EXAMPLES.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build && npm run test",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'Linting not configured yet'",
    "clean": "rm -rf dist coverage",
    "prepack": "npm run clean && npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
