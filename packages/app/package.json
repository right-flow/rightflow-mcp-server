{
  "name": "rightflow-hebrew-pdf-filler",
  "private": true,
  "version": "2.4.2",
  "description": "Hebrew PDF form creation and filling with native RTL support",
  "author": "RightFlow Contributors",
  "license": "PROPRIETARY",
  "type": "module",
  "homepage": "https://github.com/YOUR-ORG/rightflow#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YOUR-ORG/rightflow.git"
  },
  "bugs": {
    "url": "https://github.com/YOUR-ORG/rightflow/issues"
  },
  "keywords": [
    "hebrew",
    "pdf",
    "form-builder",
    "rtl",
    "right-to-left",
    "israel",
    "pdf-manipulation",
    "acroform",
    "pdf-lib",
    "hebrew-text",
    "bidi",
    "insurance-forms"
  ],
  "scripts": {
    "dev": "node dev-server.mjs",
    "dev:vite": "vite",
    "dev:vercel": "vercel dev",
    "build": "tsc --project tsconfig.build.json && vite build",
    "build:api": "tsc --project tsconfig.api.json",
    "build:railway": "npm run build:api && npm run build",
    "preview": "vite preview",
    "start": "NODE_ENV=production node server.mjs",
    "start:railway": "node server.mjs",
    "railway:migrate": "npx knex migrate:latest --knexfile knexfile.cjs --env production",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 30",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --grep",
    "test:integration": "vitest run --grep",
    "test:e2e": "playwright test",
    "db:migrate": "knex migrate:latest --knexfile knexfile.cjs",
    "db:migrate:make": "knex migrate:make --knexfile knexfile.cjs",
    "db:migrate:rollback": "knex migrate:rollback --knexfile knexfile.cjs",
    "db:migrate:production": "npx knex migrate:latest --knexfile knexfile.cjs --env production",
    "db:seed": "knex seed:run --knexfile knexfile.cjs",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:db:reset": "docker-compose down -v && docker-compose up -d && npm run db:migrate",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "railway:build": "npm run build:railway"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.59.3",
    "@clerk/clerk-sdk-node": "^4.13.23",
    "@google/generative-ai": "^0.24.1",
    "@pdf-lib/fontkit": "^1.1.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-toolbar": "^1.0.4",
    "@use-gesture/react": "^10.3.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.0",
    "compression": "^1.8.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "framer-motion": "^12.26.2",
    "html5-qrcode": "^2.3.8",
    "idb": "^8.0.3",
    "jszip": "^3.10.1",
    "knex": "^3.1.0",
    "lucide-react": "^0.344.0",
    "pdf-lib": "^1.17.1",
    "pg": "^8.17.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-pdf": "^7.7.3",
    "recharts": "^2.13.3",
    "react-rnd": "^10.4.1",
    "react-router-dom": "^7.12.0",
    "react-signature-canvas": "^1.1.0-alpha.2",
    "sql.js": "^1.13.0",
    "tailwind-merge": "^2.2.2",
    "tsx": "^4.21.0",
    "use-debounce": "^10.0.0",
    "uuid": "^13.0.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.6",
    "@types/jszip": "^3.4.0",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@types/react-signature-canvas": "^1.0.7",
    "@types/sql.js": "^1.4.9",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "@vercel/node": "^5.5.15",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "baseline-browser-mapping": "^2.9.11",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "jsdom": "^27.3.0",
    "playwright": "^1.57.0",
    "postcss": "^8.4.38",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.3",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.4.5",
    "vite": "^5.2.8",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^2.1.9",
    "workbox-window": "^7.4.0"
  }
}
