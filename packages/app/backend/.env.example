# Server
NODE_ENV=development
PORT=3000

# Database (Railway auto-injects DATABASE_URL)
DATABASE_URL=postgresql://user:password@localhost:5432/rightflow

# Redis (Railway auto-injects REDIS_URL)
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-secret-key-min-32-chars-replace-in-production
CLERK_SECRET_KEY=sk_test_...
CLERK_PUBLISHABLE_KEY=pk_test_...

# Frontend
FRONTEND_URL=http://localhost:5173

# Webhook
WEBHOOK_TIMEOUT_MS=10000
WEBHOOK_MAX_RETRIES=5

# Storage
STORAGE_PATH=/app/storage
STORAGE_PROVIDER=railway

# Logging
LOG_LEVEL=info
