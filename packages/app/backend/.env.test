# Test Environment Variables
NODE_ENV=test
PORT=3001

# Database (use same as development for now - tests clean up after themselves)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/rightflow_test

# Redis
REDIS_URL=redis://localhost:6379

# Authentication (test keys)
JWT_SECRET=test-secret-key-for-jwt-minimum-32-characters-long
CLERK_SECRET_KEY=sk_test_fake_clerk_secret_key_for_testing
CLERK_PUBLISHABLE_KEY=pk_test_fake_clerk_publishable_key

# Frontend
FRONTEND_URL=http://localhost:5173

# Webhook
WEBHOOK_TIMEOUT_MS=10000
WEBHOOK_MAX_RETRIES=5

# Storage
STORAGE_PATH=/tmp/test-storage
STORAGE_PROVIDER=railway

# Logging
LOG_LEVEL=error

# Integration Hub - Encryption Key (64 hex chars = 256 bits)
INTEGRATION_ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
